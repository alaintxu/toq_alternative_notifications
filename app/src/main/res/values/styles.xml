<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowActionBarOverlay">false</item>


    </style>
    <style name="AppListRV">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--item name="android:clickable">false</item-->
        <item name="android:background">@android:color/white</item>
        <item name="android:dividerHeight">10dp</item>
    </style>
    <!--style name="AppCard">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:layout_margin">5dp</item>
    </style-->
    <style name="AppList">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <!--item name="android:divider">@color/primary</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item-->
    </style>
    <style name="AppListHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:layout_weight">0</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="AppListHeaderTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Divider">
        <item name="android:background">@drawable/divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="TitleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="StepList">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="android:duration">200</item>
    </style>
    <style name="StepList.Step">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="StepList.StepText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="StepList.StepTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="StepList.StepInfoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:src">@android:drawable/ic_menu_info_details</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:onClick">collapseView</item>
        <item name="android:background">@null</item>
    </style>
    <style name="StepList.StepDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="StepList.StepButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:onClick">uiButtonClicked</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
