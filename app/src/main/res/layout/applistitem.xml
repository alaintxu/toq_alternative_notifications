<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/appCB"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:onClick="onCheckBoxClicked" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/appIconIV"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/appCB"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="App Title"
        android:id="@+id/appTitleTV"
        android:layout_alignTop="@+id/appIconIV"
        android:layout_toEndOf="@+id/appIconIV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="App Package"
        android:id="@+id/appPackageTv"
        android:layout_below="@+id/appTitleTV"
        android:layout_toEndOf="@+id/appIconIV" />
</RelativeLayout>